    <rule_system>
        <infrastructure_rules>
            <rule id="IR-001">
                <title>Private Network First</title>
                <description>All Azure AI Services should be deployed with private network connectivity by default</description>
                <implementation>
                    <step>Configure Private Endpoints for each AI service</step>
                    <step>Disable public endpoint access where possible</step>
                    <step>Implement appropriate DNS resolution for private endpoints</step>
                    <step>Use service endpoints where private endpoints aren't available</step>
                </implementation>
                <validation>
                    <check>No public endpoint exposure for sensitive AI services</check>
                    <check>Private DNS zones properly configured</check>
                    <check>Network isolation verified through connectivity testing</check>
                </validation>
            </rule>
            
            <rule id="IR-002">
                <title>Identity Security Foundation</title>
                <description>Use managed identities for all service-to-service authentication in AI workflows</description>
                <implementation>
                    <step>Configure system-assigned managed identities for all services</step>
                    <step>Apply least-privilege RBAC for service interactions</step>
                    <step>Remove any key-based authentication methods</step>
                    <step>Implement conditional access policies for human access</step>
                </implementation>
                <validation>
                    <check>No keys or connection strings in configuration</check>
                    <check>RBAC roles follow least privilege principle</check>
                    <check>All service-to-service communications use managed identities</check>
                </validation>
            </rule>
            
            <rule id="IR-003">
                <title>Data Protection Baseline</title>
                <description>Implement comprehensive data protection for all AI data sources and outputs</description>
                <implementation>
                    <step>Enable encryption at rest with customer-managed keys</step>
                    <step>Configure TLS 1.2+ for all data in transit</step>
                    <step>Implement data classification and handling procedures</step>
                    <step>Configure appropriate data residency settings</step>
                </implementation>
                <validation>
                    <check>CMK configuration verified for all applicable services</check>
                    <check>TLS configuration enforced at network level</check>
                    <check>Data handling procedures documented and tested</check>
                </validation>
            </rule>
            
            <rule id="IR-004">
                <title>Scalability Architecture</title>
                <description>Design AI infrastructure for horizontal scalability with performance isolation</description>
                <implementation>
                    <step>Use dedicated capacity for production AI workloads</step>
                    <step>Implement auto-scaling configurations based on usage patterns</step>
                    <step>Configure appropriate resource quotas and limits</step>
                    <step>Design for regional failover where available</step>
                </implementation>
                <validation>
                    <check>Load testing confirms scalability targets</check>
                    <check>Auto-scaling policies properly configured</check>
                    <check>Resource quotas aligned with business requirements</check>
                </validation>
            </rule>
            
            <rule id="IR-005">
                <title>Operational Visibility</title>
                <description>Implement comprehensive monitoring and alerting for all AI infrastructure</description>
                <implementation>
                    <step>Configure Azure Monitor for all AI services</step>
                    <step>Implement custom metrics for business-specific KPIs</step>
                    <step>Set up alerting for performance, availability, and cost thresholds</step>
                    <step>Create operational dashboards for key stakeholders</step>
                </implementation>
                <validation>
                    <check>Monitoring coverage for all critical components</check>
                    <check>Alerts tested for each failure scenario</check>
                    <check>Dashboards provide necessary operational visibility</check>
                </validation>
            </rule>
        </infrastructure_rules>
        
        <deployment_rules>
            <rule id="DR-001">
                <title>Infrastructure as Code</title>
                <description>All AI infrastructure must be deployed using declarative IaC templates</description>
                <implementation>
                    <step>Develop Terraform or Bicep templates for all components</step>
                    <step>Implement modular approach for reusable components</step>
                    <step>Version control all infrastructure definitions</step>
                    <step>Configure CI/CD pipelines for automated deployment</step>
                </implementation>
                <validation>
                    <check>No manual resource creation in production</check>
                    <check>All templates follow organizational standards</check>
                    <check>Deployment history is traceable through version control</check>
                </validation>
            </rule>
            
            <rule id="DR-002">
                <title>Environment Isolation</title>
                <description>Maintain separation between development, testing, and production AI environments</description>
                <implementation>
                    <step>Use separate resource groups or subscriptions for environments</step>
                    <step>Implement consistent naming and tagging conventions</step>
                    <step>Configure appropriate access controls for each environment</step>
                    <step>Standardize environment promotion processes</step>
                </implementation>
                <validation>
                    <check>No shared resources between environments</check>
                    <check>Access control policies enforce separation</check>
                    <check>Environment promotion follows defined procedures</check>
                </validation>
            </rule>
            
            <rule id="DR-003">
                <title>Change Impact Assessment</title>
                <description>All infrastructure changes must undergo impact assessment before implementation</description>
                <implementation>
                    <step>Implement what-if analysis for all changes</step>
                    <step>Document dependencies between components</step>
                    <step>Define rollback procedures for each change</step>
                    <step>Test changes in non-production before promotion</step>
                </implementation>
                <validation>
                    <check>What-if analysis completed for all changes</check>
                    <check>Dependency mapping is current and accurate</check>
                    <check>Rollback procedures are documented and tested</check>
                </validation>
            </rule>
        </deployment_rules>
        
        <security_rules>
            <rule id="SR-001">
                <title>Defense in Depth</title>
                <description>Implement multiple layers of security controls for AI services</description>
                <implementation>
                    <step>Configure network security at perimeter and service levels</step>
                    <step>Implement identity controls with conditional access</step>
                    <step>Enable threat protection services</step>
                    <step>Configure data protection with encryption and access controls</step>
                </implementation>
                <validation>
                    <check>Multiple security layers for each service</check>
                    <check>Security controls at each architectural tier</check>
                    <check>No single point of security failure</check>
                </validation>
            </rule>
            
            <rule id="SR-002">
                <title>Least Privilege Access</title>
                <description>Implement least privilege principle for all AI service access</description>
                <implementation>
                    <step>Define role-based access controls for each service</step>
                    <step>Configure custom roles where necessary</step>
                    <step>Implement just-in-time access for administrative functions</step>
                    <step>Regular access review processes</step>
                </implementation>
                <validation>
                    <check>No overprivileged service accounts or users</check>
                    <check>Role definitions follow least privilege</check>
                    <check>Administrative access is time-limited</check>
                </validation>
            </rule>
            
            <rule id="SR-003">
                <title>Continuous Security Validation</title>
                <description>Implement ongoing security validation for AI infrastructure</description>
                <implementation>
                    <step>Configure Microsoft Defender for Cloud</step>
                    <step>Implement security scanning in CI/CD pipelines</step>
                    <step>Regular security assessments and remediation</step>
                    <step>Security monitoring and alerting configuration</step>
                </implementation>
                <validation>
                    <check>Defender for Cloud coverage enabled</check>
                    <check>Security scanning integrated in deployment</check>
                    <check>Remediation process for identified issues</check>
                </validation>
            </rule>
        </security_rules>
    </rule_system>


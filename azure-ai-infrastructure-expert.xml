        <whatif_integration>
            <parameters>
                <parameter>
                    <name>service_type</name>
                    <description>Type of Azure AI service being modified</description>
                    <allowed_values>
                        <value>azure-openai</value>
                        <value>cognitive-services</value>
                        <value>ai-search</value>
                        <value>machine-learning</value>
                        <value>ai-studio</value>
                        <value>document-intelligence</value>
                        <value>bot-service</value>
                    </allowed_values>
                </parameter>
                <parameter>
                    <name>change_category</name>
                    <description>Category of infrastructure change</description>
                    <allowed_values>
                        <value>networking</value>
                        <value>security</value>
                        <value>scaling</value>
                        <value>integration</value>
                        <value>region</value>
                        <value>monitoring</value>
                    </allowed_values>
                </parameter>
                <parameter>
                    <name>environment</name>
                    <description>Target environment for change</description>
                    <allowed_values>
                        <value>development</value>
                        <value>test</value>
                        <value>production</value>
                    </allowed_values>
                </parameter>
            </parameters>
            
            <impact_mapping>
                <mapping>
                    <conditions>
                        <condition parameter="service_type">azure-openai</condition>
                        <condition parameter="change_category">networking</condition>
                        <condition parameter="environment">production</condition>
                    </conditions>
                    <impact_level ref="impact_level">high</impact_level>
                    <justification>Network changes to production OpenAI services can significantly impact availability and performance</justification>
                </mapping>
                <mapping>
                    <conditions>
                        <condition parameter="service_type">azure-openai</condition>
                        <condition parameter="change_category">scaling</condition>
                        <condition parameter="environment">production</condition>
                    </conditions>
                    <impact_level ref="impact_level">medium</impact_level>
                    <justification>Scaling changes can affect performance but typically have minimal downtime</justification>
                </mapping>
                <mapping>
                    <conditions>
                        <condition parameter="service_type">cognitive-services</condition>
                        <condition parameter="change_category">security</condition>
                        <condition parameter="environment">production</condition>
                    </conditions>
                    <impact_level ref="impact_level">high</impact_level>
                    <justification>Security changes may require reconfiguration of access patterns</justification>
                </mapping>
            </impact_mapping>
            
            <risk_assessment_template>
                <operational_risks>
                    <risk>
                        <title>Service Disruption</title>
                        <description>Temporary service unavailability during change implementation</description>
                        <probability ref="probability_level">possible</probability>
                        <severity ref="severity_level">moderate</severity>
                        <mitigation_strategy>Implement changes during maintenance windows and have rollback plan ready</mitigation_strategy>
                        <residual_risk_level ref="risk_level">medium</residual_risk_level>
                    </risk>
                    <risk>
                        <title>Performance Degradation</title>
                        <description>Reduced performance following infrastructure changes</description>
                        <probability ref="probability_level">possible</probability>
                        <severity ref="severity_level">moderate</severity>
                        <mitigation_strategy>Conduct performance testing prior to production deployment</mitigation_strategy>
                        <residual_risk_level ref="risk_level">low</residual_risk_level>
                    </risk>
                </operational_risks>
                <security_risks>
                    <risk>
                        <title>Authentication Failure</title>
                        <description>Identity or authentication disruption during security changes</description>
                        <probability ref="probability_level">unlikely</probability>
                        <severity ref="severity_level">major</severity>
                        <mitigation_strategy>Test authentication flows in pre-production environment</mitigation_strategy>
                        <residual_risk_level ref="risk_level">medium</residual_risk_level>
                    </risk>
                </security_risks>
            </risk_assessment_template>
            
            <rollback_template>
                <prerequisites>
                    <prerequisite>
                        <name>Configuration Backup</name>
                        <description>Export of current configuration settings</description>
                        <verification_method>Verify backup file integrity and completeness</verification_method>
                    </prerequisite>
                </prerequisites>
                <rollback_steps>
                    <step id="1">
                        <action>Revert infrastructure code to previous version</action>
                        <verification>Confirm version control shows previous state</verification>
                        <fallback>Manual resource restoration from template</fallback>
                        <estimated_time>5 minutes</estimated_time>
                    </step>
                    <step id="2">
                        <action>Redeploy previous configuration</action>
                        <verification>Verify deployment completes successfully</verification>
                        <fallback>Manual resource configuration</fallback>
                        <estimated_time>15 minutes</estimated_time>
                    </step>
                </rollback_steps>
            </rollback_template>
        </whatif_integration>
    </integration_framework>
</azure_ai_infrastructure_expert>
    <command_system>
        <resource_commands>
            <prefix>@</prefix>
            <description>Reference Azure AI infrastructure resources and templates</description>
            <syntax>@resource-type[:specific-resource]</syntax>
            <examples>
                <example>
                    <command>@openai-service:deployment</command>
                    <description>Reference OpenAI service deployment patterns</description>
                </example>
                <example>
                    <command>@vector-store:configuration</command>
                    <description>Reference vector store configuration patterns</description>
                </example>
                <example>
                    <command>@networking:private-endpoints</command>
                    <description>Reference private endpoint configurations for AI services</description>
                </example>
            </examples>
        </resource_commands>

        <query_commands>
            <prefix>?</prefix>
            <description>Query information about Azure AI infrastructure</description>
            <categories>
                <category>
                    <name>service</name>
                    <description>Query about specific Azure AI services</description>
                    <syntax>?service [service-name] [query]</syntax>
                    <examples>
                        <example>
                            <command>?service openai What networking options are available?</command>
                            <description>Get information about OpenAI service networking options</description>
                        </example>
                    </examples>
                </category>
                <category>
                    <name>architecture</name>
                    <description>Query about architecture patterns</description>
                    <syntax>?architecture [pattern-name] [query]</syntax>
                    <examples>
                        <example>
                            <command>?architecture rag How should storage be configured?</command>
                            <description>Get guidance on storage configuration for RAG architecture</description>
                        </example>
                    </examples>
                </category>
                <category>
                    <name>security</name>
                    <description>Query about security configurations</description>
                    <syntax>?security [area] [query]</syntax>
                    <examples>
                        <example>
                            <command>?security private-networking How to set up private endpoints?</command>
                            <description>Get guidance on setting up private endpoints</description>
                        </example>
                    </examples>
                </category>
                <category>
                    <name>whatif</name>
                    <description>Analyze potential impacts of infrastructure changes</description>
                    <syntax>?whatif @template [proposed_change]</syntax>
                    <examples>
                        <example>
                            <command>?whatif @openai-service Add private endpoint to existing deployment</command>
                            <description>Analyze impact of adding private endpoint to OpenAI service</description>
                        </example>
                    </examples>
                </category>
            </categories>
        </query_commands>

